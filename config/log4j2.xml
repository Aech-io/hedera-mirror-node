<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p  %-4L %c{1} - %m%n"/>
		</Console>
		<RollingFile name="recordStream-log" fileName="output/recordStream.log"
					 filePattern="output/recordStream.log-%d{yyyy-MM-dd}-%i.log" >
			<PatternLayout>
				<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %-4L %c{1} - %m%n</pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="5 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10"/>
		</RollingFile>
		<RollingFile name="eventStream-log" fileName="output/eventStream.log"
					 filePattern="output/eventStream.log-%d{yyyy-MM-dd}-%i.log" >
			<PatternLayout>
				<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %-4L %c{1} - %m%n</pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="5 MB" />
			</Policies>
			<DefaultRolloverStrategy max="10"/>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="WARN">
			<AppenderRef ref="Console"/>
		</Root>
		
		<Logger name="downloadandparserecordfiles" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>
		<Logger name="downloadandparseeventfiles" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>

		<Logger name="networkaddressbook" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>

		<Logger name="proxy" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>

		<Logger name="cryptoservicemirror" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>

		<Logger name="fileservicemirror" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>

		<Logger name="serviceagent" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>

		<Logger name="smartcontractservicemirror" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>

		<Logger name="loggerstatus" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>

		<Logger name="recordfilelogger" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>

		<Logger name="recordfileparser" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>

		<Logger name="nodesignatureverifier" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>
		<Logger name="balancelogger" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>
		<Logger name="configloader" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>
		<Logger name="databaseUtilities" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>
		<Logger name="downloader" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>
		<Logger name="utility" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>
		<Logger name="recordStream-log" level="WARN">
			<AppenderRef ref="recordStream-log" level="WARN"/>
		</Logger>
		<Logger name="eventStream-log" level="INFO">
			<AppenderRef ref="eventStream-log" level="INFO"/>
		</Logger>
	</Loggers>
</Configuration>